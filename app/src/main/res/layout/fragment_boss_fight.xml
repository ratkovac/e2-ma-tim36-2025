<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".presentation.fragments.BossFightFragment">

    <!-- Boss Health Bar Container -->
    <LinearLayout
        android:id="@+id/boss_health_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:background="@drawable/health_bar_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Boss Health Text -->
        <TextView
            android:id="@+id/boss_health_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="100 HP"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Boss Health Bar -->
        <ProgressBar
            android:id="@+id/boss_health_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:max="100"
            android:progress="100"
            android:progressTint="@color/health_bar_color" />

    </LinearLayout>

    <!-- Player PP Bar Container -->
    <LinearLayout
        android:id="@+id/player_pp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/pp_bar_background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boss_health_container">

        <!-- Player PP Text -->
        <TextView
            android:id="@+id/player_pp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="50 PP"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Player PP Bar -->
        <ProgressBar
            android:id="@+id/player_pp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/pp_bar_color" />

    </LinearLayout>

    <!-- Boss Image -->
    <ImageView
        android:id="@+id/boss_image"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/boss"
        android:contentDescription="Boss"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_pp_container" />

    <!-- Bottom Info Container - Horizontal Layout -->
    <LinearLayout
        android:id="@+id/bottom_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boss_image">

        <!-- Equipment Display -->
        <LinearLayout
            android:id="@+id/equipment_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/equipment_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/equipment_placeholder"
                android:contentDescription="Equipment"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <TextView
                android:id="@+id/equipment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic Sword"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Attack Counter -->
        <LinearLayout
            android:id="@+id/attack_counter_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/attack_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 / 5"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="napada"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Success Chance -->
        <LinearLayout
            android:id="@+id/success_chance_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/success_chance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="68%"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="šansa"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Attack Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/attack_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="80dp"
        android:text="⚔"
        android:textSize="24sp"
        app:backgroundTint="@color/attack_button_color"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shake Instruction Text -->
    <TextView
        android:id="@+id/shake_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Ili protresite telefon za napad"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/text_background"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/attack_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
